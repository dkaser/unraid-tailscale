<?xml version='1.0' standalone='yes'?>
<!DOCTYPE PLUGIN>

<PLUGIN 
  name="{{ name }}"
  author="{{ author }}"
  version="{{ version }}"
  pluginURL="https://raw.githubusercontent.com/{{ githubRepository }}/{{ branch }}/plugin/{{ filename }}.plg"
  launch="Settings/Tailscale"
  support="https://forums.unraid.net/topic/136889-plugin-tailscale/"
>

<multiLanguage>true</multiLanguage>

<CHANGES>
<![CDATA[
{% include "files/CHANGELOG.md" %}
]]>
</CHANGES>

<FILE Name="{{ configDirectory }}/{{ tailscaleVersion }}.tgz">
<URL>https://pkgs.tailscale.com/stable/{{ tailscaleVersion }}.tgz</URL>
<MD5>{{ tailscaleMD5 }}</MD5>
</FILE>

<FILE Name="{{ configDirectory }}/unraid-tailscale-utils-{{ packageVersion }}-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-tailscale-utils/releases/download/{{ packageVersion }}/unraid-tailscale-utils-{{ packageVersion }}-noarch-1.txz</URL>
<MD5>{{ packageMD5 }}</MD5>
</FILE>

<FILE Name="{{ configDirectory }}/unraid-plugin-diagnostics-{{ diagVersion }}-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-plugin-diagnostics/releases/download/{{ diagVersion }}/unraid-plugin-diagnostics-{{ diagVersion }}-noarch-1.txz</URL>
<MD5>{{ diagMD5 }}</MD5>
</FILE>

<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
{% include "files/install.sh" %}
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
{% include "files/remove.sh" %}
]]>
</INLINE>
</FILE>

</PLUGIN>
