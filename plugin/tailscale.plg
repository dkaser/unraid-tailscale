<!ENTITY version   "2023.05.10">
<!ENTITY plugdir   "/usr/local/emhttp/plugins/&name;">
<!ENTITY confdir   "/boot/config/plugins/&name;">
<!ENTITY launch    "Settings/Tailscale">
<!ENTITY github    "dkaser/unraid-tailscale">
<!ENTITY branch    "main">
<!ENTITY pluginURL "https://raw.githubusercontent.com/&github;/&branch;/plugin/&name;.plg">
<!ENTITY tsVER     "tailscale_1.40.1_amd64">
<!ENTITY tsMD5     "401c2c5ce60cabe3eb89f3f2b10357d5">
<!ENTITY pkgVER    "2023.05.08">
<!ENTITY pkgMD5    "a579f4aa412a011e6882abad6df0d410">
]>

<PLUGIN 
  name="&name;"
  author="&author;"
  version="&version;"
  pluginURL="&pluginURL;"
  launch="&launch;"
  support="https://forums.unraid.net/topic/136889-plugin-tailscale/"
  icon="bolt"
>

